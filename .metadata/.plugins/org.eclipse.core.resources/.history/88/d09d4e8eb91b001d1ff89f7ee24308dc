package assignment;

public class A012_String {

	public static void main(String[] args) {
		String  name = "My name is priti and I am learning a java.";
		
	char ch[] = name.toCharArray();
	int count = 0;
	for (int i = 0; i < ch.length; i++) {
		if(ch[i] == ' ')
		{
			count++;
		}
	
	}
	System.out.println("total space: " +count);
	
	String character ;
	
	for (int i = 0; i < ch.length; i++) {
		if(ch[i] == character)
		{
			character++;
		}
	}
	System.out.println("total character: "+character);
	}

}
